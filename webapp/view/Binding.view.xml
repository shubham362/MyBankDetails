                    </Column>
                    <Column >
                        <Text text="Product Date"></Text>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem >
                        <cells>
                            <Label id="id" text="{ID}"></Label>
                        </cells>
                        <cells>
                            <Label id="Name" text="{Name}"></Label>
                        </cells>
                        <cells>
                            <Label id="Description" text="{Description}"></Label>
                        </cells>
                        <cells>
                            <Label id="Prices" text="{Price}"></Label>
                        </cells>
                        <cells>
                            <Label id="Date" text="{ReleaseDate}"></Label>
                        </cells>

                    </ColumnListItem>
                </items>
            </Table>
