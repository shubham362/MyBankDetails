                    <Input width="400px" type="Password"></Input>
                    <Button text="Login" width="400px" type="Emphasized" press="login"></Button>
                </VBox>

            </FlexBox> -->
        </content>

        <footer>
            <Bar >
                <contentRight>
                    <Button id="onUpdate" text="Update" press="onUpdate" type="Emphasized" icon="sap-icon://update"></Button>
                    <Button id="onBack" text="Back" press="onBack" type="Emphasized" icon="sap-icon://delete"></Button>
                </contentRight>
            </Bar>


        </footer>

    </Page>
</mvc:View>