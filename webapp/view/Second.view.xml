                    <CheckBox id="ck" ></CheckBox>
                    <Label text="Employee ID"  required="true"></Label>
                    <Text id="idTxt" text="{/empId}" ></Text>
                    
                    <Label text="Employee Name" required="true"></Label>
                    <Text id="Nametxt" text="{/empName}"></Text>
                    
                    <Label text="Employee Skills" required="true"></Label>
                    <Text id="Skillstxt" text="{/empSkills}"></Text>
                     
                    <Label text="Employee Designation" required="true"></Label>
                    <Text id="desctxt" text="{/empdesc}" ></Text>
                    
                    <Label text="Email"></Label>
                    <Text id="Emailtxt" text="{/Email}"></Text>
                    
                    <Label text="Phone No"></Label >
                    <Text id="Phonetxt" text="{/phone}"></Text>
                    <Button text="NaVTo" id="Nav" press="onSecondNav"></Button>
                    </f:content> 
                </f:SimpleForm>

